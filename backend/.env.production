# Production Environment Configuration
NODE_ENV=production
PORT=3002

# Database Configuration
DB_HOST=localhost
DB_PORT=3306
DB_USER=clinic_user
DB_PASS=clinic_password
DB_NAME=clinic_db

# JWT Configuration
JWT_SECRET=your-super-secure-jwt-secret-key-for-production-min-32-chars
JWT_REFRESH_SECRET=your-super-secure-refresh-secret-key-for-production-min-32-chars
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# CORS Configuration
CORS_ORIGIN=http://localhost:3003,https://your-frontend-domain.com
CORS_CREDENTIALS=true

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Security
HELMET_CSP_ENABLE=true
BCRYPT_ROUNDS=12

# Logging
LOG_LEVEL=info
LOG_FILE=logs/clinic.log

# Redis (for caching and sessions)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# Email Configuration (for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
SMTP_FROM=noreply@clinic.com

# File Upload
MAX_FILE_SIZE=10485760
UPLOAD_PATH=uploads/

# API Documentation
SWAGGER_TITLE=Clinic Management API
SWAGGER_DESCRIPTION=Production-ready API for clinic front desk management
SWAGGER_VERSION=1.0.0
